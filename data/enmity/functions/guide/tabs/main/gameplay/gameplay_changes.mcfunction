tellraw @s [{"text":"Here's a brief list of some changes present on all difficulties:","color":"gray"}]
tellraw @s [{"text":"   - Most enemies have slightly more non-magic damage resistance;","color":"gray"}]
tellraw @s [{"text":"   - Some enemies have a chance to be slightly stronger or faster;","color":"gray"}]
tellraw @s [{"text":"   - Entities drop all of their loot regardless of being killed by a player.","color":"gray"}]
tellraw @s [{"text":"   - Most entities drop some xp regardless of being killed by a player. Killing an entity using physical weapons usually rewards with more xp.","color":"gray"}]
tellraw @s [{"text":"   - Weapons and armor have no durability;","color":"gray"}]
tellraw @s [{"text":"   - Some enchantments are changed, see [","color":"gray"},{"text":"Enchantment Changes","color":"white","hoverEvent":{"action":"show_text","value":{"text":"Enchantment Changes"}},"clickEvent":{"action":"run_command","value":"/trigger enmity.guide set 13014"}},{"text":"];","color":"gray"}]
tellraw @s [{"text":"   - Sheep don't drop wool when killed (must be sheared);","color":"gray"}]
tellraw @s [{"text":"   - Certain entities behave differently;","color":"gray"}]
tellraw @s [{"text":"   - Certain entities spawn in different conditions;","color":"gray"}]
tellraw @s [{"text":"   - Spiders are replaced by Cave Spiders underground;","color":"gray"}]
tellraw @s [{"text":"   - Skeletons are replaced by Wraiths in soul sand valleys;","color":"gray"}]
tellraw @s [{"text":"   - Villagers and Wandering Traders regenerate health;","color":"gray"}]
tellraw @s [{"text":"   - Iron Golems regenerate health when in proximity of Villagers;","color":"gray"}]
tellraw @s [{"text":"   - Geysers occassionaly erupt from lava in the Nether;","color":"gray"}]
tellraw @s [{"text":"   - Falling into the End's void teleports you to the Overworld;","color":"gray"}]
tellraw @s [{"text":"   - Campfires grants Regeneration if stood next to;","color":"gray"}]
tellraw @s [{"text":"   - Leaves can be fallen into and are climbable.","color":"gray"}]

